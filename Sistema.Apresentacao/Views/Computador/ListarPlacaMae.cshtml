@model Sistema.Apresentacao.Models.PlacaMaeViewModelLista

@{
    ViewBag.Title = "Dados da Placa Mãe";
}

<h2 style="text-align: center;">Computador</h2>
<hr />

<div class="container">

    <div class="form-group">
        @Html.LabelFor(model => model.IDComputador)
        @Html.DisplayFor(model => model.IDComputador)
    </div>

    <div class="col-md-4"></div>

    <div class="panel panel-primary">
        <div class="panel-heading"><h4 class="panel-title" style="text-align: center;">Dados da Placa Mãe</h4></div>
        <div class="panel-body">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.IDPlacaMae)
                    @Html.DisplayFor(model => model.IDPlacaMae)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Marca, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Marca, new { @class = "form-control", @readonly = true })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Modelo, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Modelo, new { @class = "form-control", @readonly = true })
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.ActionLink("Editar", "EditarPlacaMae", new { id = Model.IDPlacaMae }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary" })
    </div>

    <div class="col-md-4"></div>

</div>
