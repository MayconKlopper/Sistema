@model Sistema.Apresentacao.Models.HDViewModelEdita

@{
    ViewBag.Title = "Editar dados do(s) Hard Disc(s)";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.IDHD)

    <h2 style="text-align: center;">Computador</h2>
    <hr />

    <div class="container">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.IDComputador)
            @Html.DisplayFor(model => model.IDComputador)
        </div>

        <div class="col-md-4"></div>

        <div class="panel panel-primary">
            <div class="panel-heading"><h4 class="panel-title" style="text-align: center;">Dados do(s) Hard Disc(s)</h4></div>
            <div class="panel-body">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.IDHD)
                        @Html.DisplayFor(model => model.IDHD)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Quantidade, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(model => model.Quantidade, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Capacidade, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(model => model.Capacidade, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(model => model.Capacidade, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-primary" })
        </div>

        <div class="col-md-4"></div>

    </div>
}
